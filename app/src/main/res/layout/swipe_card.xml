<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/foreground"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        app:cardCornerRadius="25dp"
        app:contentPadding="6dp"
        app:rippleColor="@color/background"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bus_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/bus_icon"
                android:src="@drawable/bus"
                app:tint="@color/background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/bus_icon"
                android:text="@string/buses"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="14dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/background"
                android:clickable="false"
                android:focusable="false"
                app:cornerRadius="25dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
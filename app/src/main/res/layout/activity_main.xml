<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_mapsfrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Default Search Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0.1dp"
        android:fitsSystemWindows="true"
        android:stateListAnimator="@null">

        <!-- Simple MaterialToolbar extension -->
        <com.lapism.search.widget.MaterialSearchBar
            android:id="@+id/material_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="0dp"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="enterAlways|snap" />

    </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/marker_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:src="@drawable/map_marker_outline"
            android:layout_gravity="end"
            app:backgroundTint="@color/accent"
            android:layout_marginEnd="16dp"
            app:tint="@color/white"/>

    <com.google.android.material.chip.ChipGroup
                android:id="@+id/POI_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:selectionRequired="false"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_POI"
                    style="@style/AggieMapS.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:checked="false"
                    android:text="POIs"
                    android:textColor="@color/txic_color_chips"
                    app:chipBackgroundColor="@color/bg_color_chips"
                    app:chipIcon="@drawable/office_building"
                    app:chipIconSize="18dp"
                    app:chipIconTint="@color/txic_color_chips"
                    app:chipStartPadding="10dp"
                    app:iconEndPadding="-3dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_restrooms"
                    style="@style/AggieMapS.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:checked="false"
                    android:text="Restrooms"
                    android:textColor="@color/txic_color_chips"
                    app:chipBackgroundColor="@color/bg_color_chips"
                    app:chipIcon="@drawable/toilet"
                    app:chipIconSize="18dp"
                    app:chipIconTint="@color/txic_color_chips"
                    app:chipStartPadding="10dp"
                    app:iconEndPadding="-3dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_parking"
                    style="@style/AggieMapS.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:checked="false"
                    android:text="Parking"
                    android:textColor="@color/txic_color_chips"
                    app:chipBackgroundColor="@color/bg_color_chips"
                    app:chipIcon="@drawable/parking"
                    app:chipIconSize="18dp"
                    app:chipIconTint="@color/txic_color_chips"
                    app:chipStartPadding="10dp"
                    app:iconEndPadding="-3dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_accessible"
                    style="@style/AggieMapS.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:checked="false"
                    android:text="Accessible Entrances"
                    android:textColor="@color/txic_color_chips"
                    app:chipBackgroundColor="@color/bg_color_chips"
                    app:chipIcon="@drawable/wheelchair_accessibility"
                    app:chipIconSize="18dp"
                    app:chipIconTint="@color/txic_color_chips"
                    app:chipStartPadding="10dp"
                    app:iconEndPadding="-3dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_EPhones"
                    style="@style/AggieMapS.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:checked="false"
                    android:text="Emergency Phones"
                    android:textColor="@color/txic_color_chips"
                    app:chipBackgroundColor="@color/bg_color_chips"
                    app:chipIcon="@drawable/phone"
                    app:chipIconSize="18dp"
                    app:chipIconTint="@color/txic_color_chips"
                    app:chipStartPadding="10dp"
                    app:iconEndPadding="-3dp" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

<!--    <androidx.fragment.app.FragmentContainerView-->
<!--        android:id="@+id/maps_fragment"-->
<!--        android:name="com.mrst.aggiemaps.MapsFragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->

    <com.lapism.search.widget.MaterialSearchView
        android:id="@+id/material_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        app:layout_anchor="@id/material_search_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <github.com.st235.lib_expandablebottombar.ExpandableBottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            app:exb_backgroundCornerRadius="60dp"
            app:exb_itemInactiveColor="@color/background"
            app:exb_items="@menu/menu_bottom"
            app:exb_backgroundColor="@color/foreground"
            app:exb_transitionDuration="300"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>


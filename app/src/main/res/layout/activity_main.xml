<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <!-- Circular progress indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/trip_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible" />

    <!-- Default Search Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0.1dp"
        android:stateListAnimator="@null">

        <!-- Simple MaterialToolbar extension -->
        <com.lapism.search.widget.MaterialSearchBar
            android:id="@+id/material_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            app:layout_scrollFlags="enterAlways|snap" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/maps_fragment"
        android:name="com.mrst.aggiemaps.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.lapism.search.widget.MaterialSearchView
        android:id="@+id/material_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:layout_anchor="@id/material_search_bar" />


<!--  Source and Dest Search Bar Container  -->
    <LinearLayout
        android:id="@+id/ll_srcdest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:orientation="vertical">

        <!-- Source Search Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/src_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0.1dp"
            android:stateListAnimator="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Simple MaterialToolbar extension -->
                <com.lapism.search.widget.MaterialSearchBar
                    android:id="@+id/src_search_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:layout_scrollFlags="enterAlways|snap" />

                <!--     Cancel FAB      -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/foreground"
                    android:contentDescription="@string/shows_timetable"
                    android:elevation="2dp"
                    app:borderWidth="0dp"
                    app:elevation="2dp"
                    app:fabCustomSize="48dp"
                    app:pressedTranslationZ="3dp"
                    app:rippleColor="@color/red_700"
                    app:srcCompat="@drawable/window_close"
                    app:tint="@color/background" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Destination Search Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/dest_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0.1dp"
            android:stateListAnimator="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Simple MaterialToolbar extension -->
                <com.lapism.search.widget.MaterialSearchBar
                    android:id="@+id/dest_search_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:layout_scrollFlags="enterAlways|snap" />

                <!--     Swap FAB      -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_swap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/foreground"
                    android:contentDescription="@string/shows_timetable"
                    android:elevation="2dp"
                    app:borderWidth="0dp"
                    app:elevation="2dp"
                    app:fabCustomSize="48dp"
                    app:pressedTranslationZ="3dp"
                    app:rippleColor="@color/red_700"
                    app:srcCompat="@drawable/swap_vertical"
                    app:tint="@color/background" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>

    <!-- Direction Sheet -->
    <FrameLayout
        android:id="@+id/directions_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:overScrollMode="always"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.mrst.aggiemaps.NestedCoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp">

            <!-- Change overscroll mode to never for disabling snapping to top when scrolled up -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:fillViewport="true"
                android:overScrollMode="ifContentScrolls">

                <!-- Bottom sheet contents. -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/BottomSheetCorners"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/background"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Draggable rectangle -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/drag_direction"
                            android:layout_width="35dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="30dp"
                            android:backgroundTint="@color/foreground"
                            android:stateListAnimator="@null"
                            app:cornerRadius="25dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/testText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="DIRECTION CONTENT: "
                                />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="@color/accent"
                                app:cornerRadius="20dp"
                                android:text="Directions"
                                android:layout_marginBottom="100dp"
                                android:layout_toRightOf="@id/testText"
                                android:layout_alignParentRight="true"
                                />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/directions_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.core.widget.NestedScrollView>

        </com.mrst.aggiemaps.NestedCoordinatorLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


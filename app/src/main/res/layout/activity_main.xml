<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <!-- Default Search Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0.1dp"
        android:stateListAnimator="@null">

        <!-- Simple MaterialToolbar extension -->
        <com.lapism.search.widget.MaterialSearchBar
            android:id="@+id/material_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            app:layout_scrollFlags="enterAlways|snap" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/maps_fragment"
        android:name="com.mrst.aggiemaps.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.lapism.search.widget.MaterialSearchView
        android:id="@+id/material_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:layout_anchor="@id/material_search_bar" />

    <!-- Source Search Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/src_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0.1dp"
        android:stateListAnimator="@null"
        android:visibility="gone">

        <!-- Simple MaterialToolbar extension -->
        <com.lapism.search.widget.MaterialSearchBar
            android:id="@+id/src_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            app:layout_scrollFlags="enterAlways|snap" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Destination Search Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dest_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0.1dp"
        android:stateListAnimator="@null"
        android:visibility="gone">

        <!-- Simple MaterialToolbar extension -->
        <com.lapism.search.widget.MaterialSearchBar
            android:id="@+id/dest_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            app:layout_scrollFlags="enterAlways|snap" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Direction Sheet -->
    <FrameLayout
        android:id="@+id/directions_bottom_sheet"
        style="@style/ThemeOverlay.App.BottomSheetDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:elevation="10dp"
        android:overScrollMode="always"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.mrst.aggiemaps.NestedCoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp">

            <!-- Change overscroll mode to never for disabling snapping to top when scrolled up -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:fillViewport="true"
                android:overScrollMode="ifContentScrolls">

                <!-- Bottom sheet contents. -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/BottomSheetCorners"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/background"
                    app:contentPadding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Draggable rectangle -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="45dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="30dp"
                            android:backgroundTint="@color/foreground"
                            android:stateListAnimator="@null"
                            app:cornerRadius="25dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/directions_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.core.widget.NestedScrollView>

        </com.mrst.aggiemaps.NestedCoordinatorLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

